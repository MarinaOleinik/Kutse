@model Kutse.Models.FileUpload
@{
    ViewBag.Title = "Pildid";
}


@using (Html.BeginForm("FileUpload", "FileUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div>
        @Html.LabelFor(x => x.FileName,
       htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div>
        @Html.EditorFor(x => x.FileName, new { htmlAttributes = new { @class = "form-control", type = "file" } })

        @Html.ValidationMessageFor(x => x.FileName,
       "", new { @class = "text-danger" })
    </div>
    <div>
        <input type="submit" value="Alla laadimine" class="btn btn-primary" />
    </div>
    if (ViewBag.ImageUrl != null)

    {
        <img width="150" height="150" src="@ViewBag.ImageUrl" />
    }
    else
    {
        <img width="150" height="150" src="~/Images/sendi.jpg" />
    }

    <div class="col-md-offset-2 col-md-10 text-success">
        @ViewBag.FileStatus


        @ViewBag.ImageUrl

    </div>
}

